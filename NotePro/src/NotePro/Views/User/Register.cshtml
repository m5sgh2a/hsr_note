@model NotePro.Models.Register

<div class="container">
    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Registrieren</div>
                <div style="float:right; font-size: 85%; position: relative; top:-10px"><a asp-action="Login" asp-controller="User">Anmelden</a></div>
            </div>
            <div class="panel-body">
                <form asp-controller="User" asp-action="Register" method="post" id="signupform" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div id="signupalert" style="display:none" class="alert alert-danger">
                        <p>Fehler:</p>
                        <span></span>
                    </div>

                    <div class="form-group">
                        <label for="firstname" class="col-md-3 control-label">Vorname</label>
                        <div class="col-md-9">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Vorname">
                            <span asp-validation-for="FirstName" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="col-md-3 control-label">Nachname</label>
                        <div class="col-md-9">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Nachname">
                            <span asp-validation-for="LastName" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-md-3 control-label">E-Mail</label>
                        <div class="col-md-9">
                            <input asp-for="Email" class="form-control" placeholder="E-Mail">
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-md-3 control-label">Passwort</label>
                        <div class="col-md-9">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Passwort">
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-signup" type="submit" class="btn btn-default" formaction="Register"><i class="icon-hand-right"></i>Registrieren</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
   @Html.Raw(ViewData["Duplicate"])
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}